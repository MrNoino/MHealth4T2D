<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MHealth4T2D" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->

        <item name="android:statusBarColor">@color/palide_light_blue</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back</item>

    </style>

    <style name="Theme.MHealth4T2D.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MHealth4T2D.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MHealth4T2D.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.MHealth4T2D.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MHealth4T2D.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MHealth4T2D.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>